<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lg.warehouse.dao.WareGoodsDAO">
    <!--查询该库房内的所有execute = T direction = In的货物-->
  <select id="queryOrderByWarehouseID" parameterType="String" resultType="com.lg.warehouse.entity.Order">
      SELECT o.*
      FROM tb_wareorder w,tb_order o
      WHERE w.warehouse_id=#{warehouseID}
            AND w.warehouse_id = o.to_storage_id
            AND o.executed="T"
            AND o.direction="In"
  </select>

    <insert id="addGoodsToWarehouse" parameterType="com.lg.warehouse.entity.WareGoods">

      INSERT INTO tb_wareorder
      (warehouse_id,goods_id,goods_num)
      VALUES (#{warehouseID},#{goodsID},#{goodsNum})
    </insert>


    <select id="queryGoodsByWarehouseID" parameterType="String" resultType="com.lg.warehouse.entity.WareGoods">
        SELECT *
        FROM tb_waregoods
        WHERE warehouse_id =#{warehouseID}
    </select>

    <select id="queryGoodsInWarehouse" parameterType="com.lg.warehouse.entity.WareGoods" resultType="com.lg.warehouse.entity.WareGoods">
        SELECT *
        FROM tb_waregoods
        WHERE warehouse_id =#{warehouseID}
              AND goods_id =#{goodsID}
    </select>


    <update id="modifyGoodsNum" parameterType="com.lg.warehouse.entity.WareGoods">
        UPDATE tb_waregoods
        SET goods_num=#{goodsNum}
        WHERE goods_id =#{goodsID}
    </update>


</mapper>