<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lg.warehouse.dao.OrderDAO">

  <insert id="addOrder" parameterType="com.lg.warehouse.entity.Order" >
      INSERT INTO tb_order

    (operator_account,goods_id,goods_num,total_value,from_storage_id,to_storage_id,location,direction,executed,create_time,last_modify_time)
    VALUES (#{operator},#{goodsID},#{goodsNum},#{totalValue},#{fromStorageID},#{toStorageID},#{location},#{direction},#{executed},#{createTime},#{lastModifyTime})

</insert>
    
    <select id="queryAllOrders" resultType="com.lg.warehouse.entity.Order">
        
        SELECT *
        FROM tb_order
    </select>
    
    <select id="queryUnfinishedOrders" resultType="com.lg.warehouse.entity.Order">
        SELECT *
        FROM tb_order
        WHERE executed='F'
    </select>

    <select id="queryFinishedOrders" resultType="com.lg.warehouse.entity.Order">
        SELECT *
        FROM tb_order
        WHERE executed='T'
    </select>



</mapper>